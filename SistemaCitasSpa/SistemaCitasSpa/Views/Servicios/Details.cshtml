@using System.Globalization
@model SistemaCitasSpa.Models.Servicio

@{
    ViewBag.Title = "Detalles del Servicio";
}

<h2 class="text-center mb-4">Detalles del Servicio</h2>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.NombreServicio</dd>

            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4">Duración (min)</dt>
            <dd class="col-sm-8">@Model.DuracionEnMinutos</dd>

            <dt class="col-sm-4">Precio</dt>
            <dd class="col-sm-8">@Model.Precio.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</dd>
        </dl>

        <div class="d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.ServicioID" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
