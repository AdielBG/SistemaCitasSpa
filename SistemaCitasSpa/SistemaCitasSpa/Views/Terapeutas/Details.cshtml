@model SistemaCitasSpa.Models.Terapeutum

@{
    ViewData["Title"] = "Detalles del Terapeuta";
    var t = Model;
}

<h2>Detalles del Terapeuta</h2>

<table class="table table-bordered mt-4">
    <tr>
        <th>ID</th>
        <td>@t.TerapeutaID</td>
    </tr>
    <tr>
        <th>Nombre</th>
        <td>@t.Nombre</td>
    </tr>
    <tr>
        <th>Especialidad</th>
        <td>@t.Especialidad</td>
    </tr>
    <tr>
        <th>Teléfono</th>
        <td>@t.Telefono</td>
    </tr>
    <tr>
        <th>Correo Electrónico</th>
        <td>@t.Correo</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@t.TerapeutaID" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
