@model SistemaCitasSpa.Models.Citum

@{
    ViewData["Title"] = "Eliminar Cita";
    var cita = Model;
}

<h2>¿Estás seguro de que deseas eliminar esta cita?</h2>




<table class="table table-bordered mt-4">
    <tr>
        <th>ID</th>
        <td>@cita.CitaID</td>
    </tr>
    <tr>
        <th>Paciente</th>
        <td>@cita.Paciente?.Nombre</td>
    </tr>
    <tr>
        <th>Servicio</th>
        <td>@cita.Servicio?.NombreServicio</td>
    </tr>
    <tr>
        <th>Terapeuta</th>
        <td>@cita.Terapeuta?.Nombre</td>
    </tr>
    <tr>
        <th>Fecha</th>
        <td>@cita.Fecha.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Hora</th>
        <td>@cita.Hora</td>
    </tr>
    <tr>
        <th>Duración (min)</th>
        <td>@cita.Duracion</td>
    </tr>
</table>

<form method="post" asp-action="Delete">
    <input type="hidden" name="id" value="@cita.CitaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
