@model SistemaCitasSpa.Models.Citum

@{
    ViewData["Title"] = "Detalles de la Cita";
    var cita = Model;
}

<h2>Detalles de la Cita</h2>

<table class="table table-bordered mt-4">
    <tr>
        <th>ID</th>
        <td>@cita.CitaID</td>
    </tr>
    <tr>
        <th>Paciente</th>
        <td>@cita.Paciente.Nombre @cita.Paciente.Apellido</td>
    </tr>
    <tr>
        <th>Servicio</th>
        <td>@cita.Servicio.NombreServicio</td>
    </tr>
    <tr>
        <th>Terapeuta</th>
        <td>@cita.Terapeuta.Nombre</td>
    </tr>
    <tr>
        <th>Fecha</th>
        <td>@cita.Fecha.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Hora</th>
        <td>@cita.Hora.ToString("hh\\:mm")</td>
    </tr>
</table>

<a href="/Citas/Edit/@cita.CitaID" class="btn btn-warning">Editar</a>
<a href="/Citas/Index" class="btn btn-secondary">Volver a la lista</a>
